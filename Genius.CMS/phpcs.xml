<?xml version="1.0"?>
<ruleset name="Genius">
  <description>Genius Coding Standards</description>

  <rule ref="PSR12"/>

  <arg name="tab-width" value="2"/>
​
  <arg value="-colors"/>
​
  <rule ref="Generic.Files.LineEndings">
    <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
  </rule>

   <rule ref="Generic.Files.LineLength">
    <properties>
    <property name="lineLimit" value="256"/>
    <property name="absoluteLineLimit" value="256"/>
    </properties>
  </rule>

  <rule ref="Generic.WhiteSpace.DisallowTabIndent" />

  <rule ref="Generic.WhiteSpace.ScopeIndent">
    <properties>
      <property name="indent" value="2" />
      <property name="tabIndent" value="false"/>
    </properties>
  </rule>

  <exclude-pattern type="relative">^/vendor/*</exclude-pattern>
  <exclude-pattern type="relative">^/app/tests/*</exclude-pattern>
  <exclude-pattern type="relative">^/app/storage/*</exclude-pattern>
</ruleset>